<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="30dp"
    android:paddingLeft="16dp"
    android:background="@drawable/fundo"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.ibititec.tvalterosa.bolao.ClassificacaoActivity"
    tools:showIn="@layout/activity_classificacao">

    <android.support.v4.widget.NestedScrollView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingBottom="55dp">
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
      <LinearLayout android:id="@+id/cabecalho_classificacao_bola"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:visibility="gone"
        android:weightSum="1"
        android:paddingBottom="20dp">

        <TextView
            android:layout_width="80dp"
            android:textSize="20dp"
            android:layout_height="wrap_content"
            android:layout_gravity="left"
            android:id="@+id/txtPosicaoBolao"
            android:text="Posicao" />

        <TextView
            android:layout_width="210dp"
            android:textSize="20dp"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:id="@+id/txtNome_ParticipanteBolao"
            android:text="Nome" />

        <TextView
            android:layout_width="93dp"
            android:textSize="20dp"
            android:layout_height="match_parent"
            android:layout_gravity="right"
            android:id="@+id/txtPontosBolao"
            android:text="Pontos"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <ListView
            android:id="@+id/listview_bolao_classificacao"
            android:layout_width="match_parent"
            android:layout_height="160dp"
            android:paddingBottom="40dp" />

        <!--<ProgressBar-->
            <!--android:id="@+id/progress_bolao_classificacao"-->
            <!--android:layout_width="match_parent"-->
            <!--android:layout_height="wrap_content"-->
            <!--android:layout_gravity="center" />-->
    </LinearLayout>
</LinearLayout>
</android.support.v4.widget.NestedScrollView>

<ImageView
    android:paddingRight="16dp"
android:layout_width="wrap_content"
android:layout_height="wrap_content"
android:layout_gravity="bottom"
android:src="@drawable/propaganda" />
    </android.support.design.widget.CoordinatorLayout>
