            android:layout_height="wrap_content"
            android:layout_alignEnd="@+id/textView11"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignRight="@+id/textView11"
            android:layout_centerVertical="true"
            android:text="Organização da competição   Marcelo Enes - (032) 99982-8528   marceloenes4@gmail.com"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textColor="@color/White" />
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/odg"
            />
        <TextView
            android:id="@+id/textView11"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignEnd="@+id/textView12"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignRight="@+id/textView12"
            android:layout_below="@+id/textView10"
            android:text="Design - Osvaldo Machado   (032) 98887-4045   odgmidia@gmail.com"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textColor="@color/White" />

        <TextView
            android:id="@+id/textView13"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/textView9"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textColor="@color/White" />

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/ibititec"
            />

        <TextView
            android:id="@+id/textView9"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/textView8"
            android:text="Empresa de desenvolvimento de software responsável pelo desenvolvimento do aplicativo - Tel: (032) - 988213243."
